<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"

             android:layout_height="match_parent"
             tools:context="com.iotapp.iot.fragment.ScmFragment">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

    <RelativeLayout
                 android:layout_width="match_parent"
                 android:padding="15dp"
                 android:layout_height="match_parent">
        <CheckBox
                android:id="@+id/checkBoxEmg"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_gravity="start|center_vertical"
                android:layout_height="wrap_content"
                />

        <TextView android:layout_width="wrap_content"

                  android:id="@+id/userTxtLbl"
                  android:layout_toRightOf="@+id/checkBoxEmg"
                  android:textSize="17sp"
                  android:textColor="@color/black_54"
                  android:layout_height="wrap_content"/>

        <Spinner  android:layout_width="wrap_content"
                  android:id="@+id/roleSpinner"
                  android:layout_centerHorizontal="true"
                  android:textSize="17sp"
                  android:textColor="@color/black_54"
                  android:background="@android:color/transparent"
                  android:entries="@array/scm_role_arrays"
                  android:prompt="@string/scm_role"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/editImg"
                   android:src="@mipmap/ic_edit"
                   android:layout_alignParentRight="true"
                   android:layout_height="wrap_content"/>

    </RelativeLayout>


    </LinearLayout>
</FrameLayout>
